<%- include('./partials/header.ejs') %> 
<%- include('./partials/nav.ejs') %>
<%- include('./partials/style.ejs') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6"> 
      
      <div class="converter-card mx-auto">
        
        <h1 class="mb-4"><%= title %></h1>
        
        <div class="alert alert-info text-start">
          Заповніть форму, щоб створити новий пост у блозі.
        </div>

        <form method="POST" action="/add-post" class="text-start">
          
          <div class="mb-3">
            <label for="title" class="form-label">Назва</label>
            <input
              required
              type="text"
              class="form-control"
              id="title"
              name="title"
              placeholder="Введіть заголовок..."
            />
          </div>
          
          <div class="mb-3">
            <label for="author" class="form-label">Автор (Прізвище)</label>
            <input
              required
              type="text"
              class="form-control"
              id="author"
              name="author"
              placeholder="Ваше прізвище..."
            />
          </div>

          <div class="mb-3">
              <label for="description" class="form-label">Опис</label>
              <textarea
                required
                class="form-control"
                id="description"
                name="description"
                rows="5"
                placeholder="Текст вашого поста..."
              ></textarea>
          </div>

          <button type="submit" class="btn btn-primary mt-2">Створити</button>
        </form>

      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>